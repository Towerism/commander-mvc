{
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "esnext"
    ],
    "outDir": "dist",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "paths": {
      "@app/*": ["src/*"],
      "@e2e/*": ["e2e/*"],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {
    "name": "Commander MVC",
    "out": "./docs",
    "mode": "modules",
    "module": "commonjs",
    "target": "es6",
    "readme": "./README.md",
    "exclude": [
      "**/*index.ts",
      "**/*.spec.ts"
    ],
    "excludeNotExported": true,
    "excludeExternals": true,
  }
}
